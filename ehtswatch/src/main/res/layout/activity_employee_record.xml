<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    android:background="@color/blackC"
    tools:context=".EmployeeRecord"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_boxedEdges="all">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/EmpNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal|top"
            android:gravity="center_vertical|start"
            android:padding="5dp"

            android:textColorHint="@color/blackC"
            android:background="@color/whiteC"
            android:textColor="@color/DarkGray"
            android:hint="Employee Name"
            />

        <TextView
            android:id="@+id/EmpIDData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="14dp"

            android:textColorHint="@color/blackC"
            android:background="@color/whiteC"
            android:textColor="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|start"

            android:hint="Employee ID      " />
        <TextView
            android:id="@+id/DeviceIdData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="14dp"
            android:textColorHint="@color/blackC"
            android:background="@color/whiteC"
            android:textColor="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|start"

            android:hint="Device ID           " />
        <Button
            android:id="@+id/startTest"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/redbutton"
            android:text="Start Test"
            android:textColor="@color/whiteC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gobackbtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/redbutton"
            android:text="Go Back"
            android:textColor="@color/whiteC"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

        </FrameLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
